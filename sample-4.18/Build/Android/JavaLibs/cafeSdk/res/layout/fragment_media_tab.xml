<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context="com.naver.plug.ui.media.tabs.MediaTabFragmentView">

    <com.naver.plug.cafe.ui.widget.ScrollListenerLayout
        android:id="@+id/media_list_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/media_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white1"></FrameLayout>

            <FrameLayout
                android:id="@+id/menu_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <include
                    android:id="@+id/media_menu_selector"
                    layout="@layout/item_media_menu_selector" />
            </FrameLayout>

        </FrameLayout>

    </com.naver.plug.cafe.ui.widget.ScrollListenerLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49dp">

        <include layout="@layout/view_fragment_error" />

    </FrameLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:layout_marginTop="4dp"
      android:background="@drawable/bg_streamer_widget2"
      >

    <LinearLayout
        android:id="@+id/streamer_streaming_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/bg_streamer_widget1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/live"
          android:textColor="@android:color/white"
          android:textSize="10dp"
          android:textStyle="bold"
          />

      <TextView
          android:id="@+id/streamer_streaming_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-3dp"
          android:textColor="@android:color/white"
          android:textSize="10dp"
          tools:text="00:07"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/streamer_viewer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/streamer_streaming_time_layout"
        android:drawableLeft="@drawable/cf_icon_view_ws"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        tools:text="44,300"
        />

    <TextView
        android:id="@+id/streamer_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/streamer_viewer_count"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/streamer_viewer_count"
        android:drawableLeft="@drawable/cf_icon_doubleheart_ws"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        tools:text="55,800"
        />

    <ImageButton
        android:id="@+id/streamer_toggle_chatting_icon"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:scaleType="center"
        android:src="@drawable/cf_icon_downdrop_s"
        />

    <FrameLayout
        android:id="@+id/streamer_chat_messages_layout"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/streamer_streaming_time_layout"
        android:visibility="gone"
        tools:visibility="visible"
        >

      <ListView
          android:id="@+id/streamer_chat_messages"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="2dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginTop="10dp"
          android:divider="@null"
          android:dividerHeight="0dp"
          android:listSelector="@android:color/transparent"
          android:scrollbars="none"
          android:transcriptMode="alwaysScroll"
          tools:listitem="@layout/item_chatting_message"
          />

      <TextView
          android:id="@+id/empty"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="9dp"
          android:layout_marginTop="24dp"
          android:drawableLeft="@drawable/cf_icon_emptychat_ds"
          android:drawablePadding="16dp"
          android:gravity="center_vertical"
          android:text="@string/live_streamer_chat_empty_message"
          android:textColor="#afafaf"
          android:textSize="10dp"
          />
    </FrameLayout>
  </RelativeLayout>

  <Button
      android:id="@+id/streamer_touch_move"
      android:layout_width="52dp"
      android:layout_height="32dp"
      android:background="@android:color/transparent"
      />

  <Button
      android:id="@+id/streamer_toggle_chatting"
      android:layout_width="52dp"
      android:layout_height="32dp"
      android:layout_gravity="right"
      android:background="@android:color/transparent"
      />
</FrameLayout>
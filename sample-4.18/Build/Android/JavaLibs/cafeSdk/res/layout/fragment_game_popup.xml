<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_game_popup_landscape"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_game_popup_portrait"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_game_popup_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="13dp"
        android:src="@drawable/cf_icon_win_close" />

    <CheckBox
        android:id="@+id/iv_game_popup_not_again"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:button="@drawable/cf_blt_check2cafe"
        android:paddingStart="8dp"
        android:text="오늘은 그만 보기"
        android:textSize="15dp"
        android:textColor="@color/white1"
        tools:ignore="RtlSymmetry" />

</FrameLayout>

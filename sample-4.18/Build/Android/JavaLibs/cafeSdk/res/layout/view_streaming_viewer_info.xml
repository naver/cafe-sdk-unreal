<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black"
    >

  <ImageView
      android:id="@+id/streamer_profile"
      android:layout_width="48dp"
      android:layout_height="48dp"
      tools:src="@drawable/cf_img_pfdefault"
      />

  <ImageView
      android:id="@+id/live_text"
      android:layout_width="48dp"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/streamer_profile"
      android:layout_below="@+id/streamer_profile"
      android:layout_marginTop="-12dp"
      android:scaleType="center"
      android:src="@drawable/blt_tag_live_3"
      />

  <TextView
      android:id="@+id/streaming_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/streamer_profile"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/streamer_profile"
      android:ellipsize="end"
      android:maxLines="2"
      android:maxWidth="280dp"
      android:textColor="@android:color/white"
      android:textSize="16dp"
      tools:text="[King&apos;s raid/킹스레이드] Magician voice line (kor) /마법사 한국 음성"
      />

  <LinearLayout
      android:id="@+id/streaming_etc_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@id/streaming_title"
      android:layout_below="@+id/streaming_title"
      android:layout_marginTop="4dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/streamer_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="Chars.k"
        />

    <TextView
        android:id="@+id/video_create_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/oval_white_2dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:visibility="gone"
        tools:text="15:49"
        tools:visibility="visible"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/streaming_counts_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@id/streaming_etc_layout"
      android:layout_below="@+id/streaming_etc_layout"
      android:layout_marginTop="4dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/streaming_viewer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/cf_icon_view_ws"
        android:drawablePadding="3dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="44,300"
        />

    <TextView
        android:id="@+id/video_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/cf_icon_heart_ws"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:visibility="gone"
        tools:text="55,800"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/streaming_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/cf_icon_doubleheart_ws"
        android:drawablePadding="3dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="55,800"
        />
  </LinearLayout>
</RelativeLayout>

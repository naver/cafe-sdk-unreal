<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <View
            android:id="@+id/reply_bar"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/contents"
            android:layout_alignTop="@id/contents"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/board_comment_reply_bar"/>

        <TextView
            android:id="@id/contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/reply_bar"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/deleted_comment"
            android:textColor="@color/gray13"
            android:textIsSelectable="true"
            android:textSize="13dp"/>

        <View
            android:id="@+id/comment_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/contents"
            android:background="@color/gray9"/>
    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingBottom="24dp"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/edit_and_delete"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/edit_article"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/reply_background"
        android:textColor="@color/black2"
        android:textSize="13dp"
        android:text="@string/edit"/>

    <TextView
        android:id="@+id/delete_article"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:background="@drawable/reply_background"
        android:textColor="@color/black2"
        android:textSize="13dp"
        android:text="@string/delete"/>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="18dp"
      android:background="@color/black2_opacity_5"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:gravity="center_vertical">

    <ImageView
        android:id="@+id/writer_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/gl_thumb_personal_profile_stroke"/>

    <TextView
        android:id="@+id/writer_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/writer_profile_image"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/writer_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/writer_nickname"
        android:layout_alignLeft="@+id/writer_nickname"
        android:textColor="@color/gray4"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/write_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/writer_level"
        android:layout_toRightOf="@+id/writer_level"
        android:paddingLeft="6dp"
        android:drawableLeft="@drawable/oval_gray"
        android:drawablePadding="6dp"
        android:textColor="@color/gray4"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/comments_count"
        android:layout_centerVertical="true"
        android:paddingRight="21dp"
        android:drawablePadding="5dp"
        android:textColor="@color/black2"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/gl_icon_comment"
        android:drawablePadding="5dp"
        android:textColor="@color/black2"
        android:textSize="15dp"/>
  </RelativeLayout>
</LinearLayout>

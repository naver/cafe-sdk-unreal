<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:paddingLeft="@dimen/moot_article_media_item_margin"
    android:paddingRight="@dimen/moot_article_media_item_margin">

    <ImageView
        android:id="@+id/post_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:background="@color/board_content_bg" />


    <ImageView
        android:id="@+id/post_meme_icon"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:src="@drawable/ico_pic_meme"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/post_gif_icon"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:src="@drawable/cf_icon_gif_s"
        android:visibility="gone" />
</FrameLayout>

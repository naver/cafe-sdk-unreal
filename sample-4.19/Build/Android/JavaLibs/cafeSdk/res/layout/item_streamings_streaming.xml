<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="134dp"
        android:layout_height="78dp"
        android:layout_marginTop="8dp"
        android:background="#e3e3e3"
        android:scaleType="center"
        android:src="@drawable/pl_img_thumb_none" />

    <ImageView
        android:id="@+id/streaming_thumbnail"
        android:layout_width="134dp"
        android:layout_height="78dp"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="134dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/streaming_thumbnail"
        android:background="@drawable/viewer_bottom_gradient" />

    <ImageView
        android:id="@+id/live_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/streaming_thumbnail"
        android:layout_alignBottom="@id/streaming_thumbnail"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/cf_blt_tag_live_thumb" />

    <TextView
        android:id="@+id/play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/streaming_thumbnail"
        android:layout_alignBottom="@id/streaming_thumbnail"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        android:textSize="13dp"
        tools:text="0:45" />

    <ImageView
        android:id="@+id/play_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/streaming_thumbnail"
        android:layout_alignBottom="@id/streaming_thumbnail"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/cf_icon_play_s" />

    <TextView
        android:id="@+id/live_encoding"
        android:layout_width="134dp"
        android:layout_height="78dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="@string/live_video_encoding_message"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/streaming_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/streaming_thumbnail"
        android:singleLine="true"
        android:textColor="#363838"
        android:textSize="14sp"
        tools:text="RANKED SEASON 2 is now Over!" />

    <TextView
        android:id="@+id/streamer_nickname_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/streaming_title"
        android:layout_alignLeft="@+id/streaming_title"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/gray10"
        android:textSize="12dp"
        tools:text="designbyhaze" />

    <TextView
        android:id="@+id/view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/streamer_nickname_time"
        android:layout_alignLeft="@+id/streaming_title"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/cf_icon_read_s"
        android:drawablePadding="4dp"
        android:textColor="#a3a9a9"
        android:textSize="12sp"
        tools:text="1,201" />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/view_count"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/view_count"
        android:drawableLeft="@drawable/cf_icon_like_3_s"
        android:drawablePadding="4dp"
        android:textColor="#a3a9a9"
        android:textSize="12sp"
        tools:text="371" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#66ced4d4" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:baselineAligned="false"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_margin"
    android:paddingRight="@dimen/list_item_margin"
    android:paddingBottom="4dp">

    <RelativeLayout
        android:id="@+id/attachment1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/thumbnail1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#e9ecef" />

        <ImageView
            android:id="@+id/gif_thumbnail1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/cf_icon_gif"
            android:visibility="gone" />

        <TextView
            android:id="@+id/delete_attachment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/cf_icon_attach_del"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp" />

        <ImageView
            android:id="@+id/video_icon1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/cf_icon_play_s" />

        <ImageView
            android:id="@+id/video_gradient1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/gl_img_imagethumbmov_gradient" />
    </RelativeLayout>


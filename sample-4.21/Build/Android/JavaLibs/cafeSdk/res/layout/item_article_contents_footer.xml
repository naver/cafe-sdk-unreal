<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:paddingLeft="@dimen/list_item_margin"
    android:paddingTop="20dp"
    android:paddingRight="@dimen/list_item_margin"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/writer_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/cf_img_pfstroke" />

    <ImageView
        android:id="@+id/staff_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/writer_profile_image"
        android:layout_alignBottom="@+id/writer_profile_image"
        android:src="@drawable/pl_icon_pfmaster" />

    <TextView
        android:id="@+id/writer_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/writer_profile_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#363838"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/writer_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/writer_nickname"
        android:layout_alignBottom="@+id/writer_nickname"
        android:layout_marginStart="2dp"
        android:textColor="#a3a9a9"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/write_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@id/writer_nickname"
        android:layout_alignStart="@id/writer_nickname"
        android:drawableStart="@drawable/oval_gray"
        android:drawablePadding="6dp"
        android:textColor="#a3a9a9"
        android:textSize="12dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/writer_profile_image"
        android:layout_marginTop="12dp"
        android:background="#66ced4d4" />

    <TextView
        android:id="@+id/read_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="15.5dp"
        android:drawableLeft="@drawable/cf_icon_read_s"
        android:drawablePadding="4dp"
        android:textColor="#a3a9a9"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="13.5dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/comments_count"
        android:drawablePadding="7dp"
        android:textColor="#363838"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13.5dp"
        android:drawableLeft="@drawable/cf_icon_comment"
        android:drawablePadding="7dp"
        android:textColor="#363838"
        android:textSize="15dp" />
</RelativeLayout>

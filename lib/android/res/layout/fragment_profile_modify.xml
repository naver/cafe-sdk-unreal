<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="0dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/cf_icon_logout_s"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="@string/profile_logout"
                    android:textColor="@color/black2"
                    android:textSize="13dp" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profile_image_layout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/profile_image_stroke"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cf_img_pfstroke" />

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cf_img_pfstroke" />

                <ImageView
                    android:id="@+id/profile_setting_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/cf_icon_pfedit_s" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/white1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/nickname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white1"
                        android:gravity="center_vertical"
                        android:imeOptions="flagNoExtractUi"
                        android:singleLine="true"
                        android:textColor="@color/black2"
                        android:textColorHint="#80999999"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/nickname_deletion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/white1"
                        android:drawableLeft="@drawable/cf_icon_inputdel" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black4" />

                <TextView
                    android:id="@+id/valid_check_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:minHeight="30dp"
                    android:text="@string/nick_name_validate"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_close_modify"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/gl_profile_modify_cancel_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray7"
            android:textSize="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray9" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/gl_profile_modify_cancel_selector"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/gray7"
            android:textSize="14dp" />


    </LinearLayout>
</LinearLayout>
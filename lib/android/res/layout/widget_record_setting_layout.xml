<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cf_icon_option_quality"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="@string/record_quality"
                android:textColor="@color/black1"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="@string/record_quality_low"
                    android:textColor="@color/black1"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/record_quality_std"
                    android:textColor="@color/black1"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/record_quality_high"
                    android:textColor="@color/black1"
                    android:textSize="12dp" />

            </LinearLayout>


            <RadioGroup
                android:id="@+id/setting_quality_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:checkedButton="@+id/rb_quality_std"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_quality_low"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/widget_record_setting_radio"
                    android:textColor="@color/black1"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_quality_std"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/widget_record_setting_radio"
                    android:gravity="top"
                    android:paddingTop="14dp"
                    android:textColor="@drawable/widget_record_setting_radio_text"
                    android:textSize="11dp" />


                <RadioButton
                    android:id="@+id/rb_quality_high"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@drawable/widget_record_setting_radio"
                    android:textColor="@color/black1"
                    android:textSize="11dp" />
            </RadioGroup>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cf_icon_option_size"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="@string/record_size"
                android:textColor="@color/black1"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="@string/record_size_360"
                    android:textColor="@color/black1"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/record_size_480"
                    android:textColor="@color/black1"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/record_size_720"
                    android:textColor="@color/black1"
                    android:textSize="12dp" />

            </LinearLayout>


            <RadioGroup
                android:id="@+id/setting_resolution_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:checkedButton="@+id/rb_resolution_480"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_resolution_360"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableLeft="@drawable/widget_record_setting_radio"
                    android:textColor="@color/black1"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_resolution_480"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/widget_record_setting_radio"
                    android:gravity="top"
                    android:paddingTop="14dp"
                    android:textColor="@drawable/widget_record_setting_radio_text"
                    android:textSize="11dp" />


                <RadioButton
                    android:id="@+id/rb_resolution_720"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@drawable/widget_record_setting_radio"
                    android:textColor="@color/black1"
                    android:textSize="11dp" />
            </RadioGroup>


        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cf_icon_option_mic_s"
                android:scaleType="matrix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="@string/record_mic"
                android:textColor="@color/black1"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/record_setting_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/record_setting_mic_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:paddingLeft="3dp"
                android:text="@string/record_mic_on"
                android:textColor="#363838"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/record_setting_mic_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/record_mic_off"
                android:textColor="#363838"
                android:textSize="13dp" />

        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/record_setting_ok"
                android:layout_width="64dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/widget_record_setting_button"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/record_setting_cancel"
                android:layout_width="64dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@drawable/widget_record_setting_button"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white1"
                android:textSize="12dp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
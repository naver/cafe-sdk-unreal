<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

  <!-- 주의: width를 0dp로 세팅하면, 텍스트가 변경 되었을 때 width가 잘못 계산된다. -->
  <TextView
      android:id="@+id/viewer_nickname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:singleLine="true"
      android:textColor="@color/white1"
      android:maxLength="20"
      android:ellipsize="end"
      android:textStyle="bold"
      android:textSize="15dp"/>

  <TextView
      android:id="@+id/viewer_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp"
      android:textColor="#a3a9a9"
      android:textSize="15dp"/>

  <TextView
      android:id="@+id/viewer_view_post"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:paddingLeft="9dp"
      android:paddingTop="5dp"
      android:paddingRight="9dp"
      android:paddingBottom="5dp"
      android:drawablePadding="3dp"
      android:drawableRight="@drawable/cf_blt_go_w"
      android:background="@drawable/empty_rectangle_corner_trans_background"
      android:gravity="center"
      android:textColor="@color/white1"
      android:textSize="12dp"
      android:text="@string/media_viewer_move_post"/>
</LinearLayout>
